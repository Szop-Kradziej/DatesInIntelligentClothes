<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/upgradeLookLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:title="@string/title_activity_upgrade_look" />

            </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.CoordinatorLayout
                    android:id="@+id/userClothImageLayout"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/upgradeLookTakePhotoButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/camera" />

                </android.support.design.widget.CoordinatorLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/upgradeLookPriorityOneView"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/checkbox_blank_circle" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/upgradeLookPriorityTwoView"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/checkbox_blank_circle" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/upgradeLookPriorityThreeView"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/checkbox_blank_circle" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/upgradeLookPriorityFourView"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/checkbox_blank_circle" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/upgradeLookPriorityFiveView"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/checkbox_blank_circle" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/upgradeLookSaveChanges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save_changes" />
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawer" />

</android.support.v4.widget.DrawerLayout>
